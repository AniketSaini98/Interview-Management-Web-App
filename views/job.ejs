<link rel="stylesheet" href="<%= assetPath('css/jobs.css') %>" />
<script defer src="<%= assetPath('js/jobs.js') %>"></script>

<!-- If User is logged in -->
<% if (locals.user) { %>
<!-- Job Portal Page -->
<div class="jobPortal">
	<div class="jobPage">
		<!-- Job Card -->
		<div class="card w-25" style="display: none" data-jobs="<%= jobs %>">
			<div class="card-head">
				<h5 class="card-header">
					Company Name
				</h5>
				
				<script src="https://cdn.lordicon.com/bhenfmcm.js"></script>
				<lord-icon
					src="https://cdn.lordicon.com/cowtkyiz.json"
					trigger="hover"
					colors="primary:#ebe6ef,secondary:#4bb3fd,tertiary:#2ca58d,quaternary:#646e78"
					style="width:40px;height:40px">
				</lord-icon>
			</div>
			
			<div class="card-body">
				<h5 class="card-title">Job Title</h5>
				<p class="card-text"><span>Interview Date</span></p>
				<p class="card-text"><span>Job Location</span></p>
				<p style="text-align: center">
					<a href="Job URL" target="_blank" class="btn">Apply Now</a>
				</p>
			</div>
		</div>
	</div>
</div>
<% } %>
